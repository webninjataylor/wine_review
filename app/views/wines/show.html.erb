<h2>Wine Details</h2>

<p>
  <strong>Name:</strong>
  <%= @wine.name %>
</p>

<p>
  <strong>Year:</strong>
  <%= @wine.year %>
</p>

<p>
  <strong>Winery:</strong>
  <%= @wine.winery %>
</p>

<p>
  <strong>Country:</strong>
  <%= @wine.country %>
</p>

<p>
  <strong>Varietal:</strong>
  <%= @wine.varietal %>
</p>

<p><label>Average Rating:</label> <%= format_average_stars(@wine) %></p>

<p><label>Log Entries:</label> Read all <%= link_to pluralize(@wine.log_entries.size, 'log entry'), wine_log_entries_path(@wine) %></p>

<%= link_to 'Edit', edit_wine_path(@wine), class: 'btn btn-primary' %>
<%= link_to 'Delete', @wine, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
<%= link_to 'Show All Wines', wines_path, class: 'btn btn-primary' %>
